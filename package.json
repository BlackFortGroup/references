{
  "private": true,
  "scripts": {
    "build": "pnpm run --recursive build",
    "clean": "pnpm run --recursive --parallel clean",
    "format": "rome format . --write",
    "link": "pnpm run --recursive link",
    "lint": "rome check .",
    "lint:fix": "pnpm lint --apply",
    "postinstall": "pnpm preconstruct",
    "preconstruct": "bun scripts/preconstruct.ts",
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx simple-git-hooks",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:ui:cov": "vite preview --outDir ./coverage",
    "test:update": "vitest --update",
    "typecheck": "pnpm run --recursive --parallel typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.9",
    "@vitest/coverage-c8": "^0.31.0",
    "@vitest/ui": "^0.31.0",
    "bun": "^0.5.9",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "jsdom": "^20.0.3",
    "msw": "^0.49.3",
    "rimraf": "^4.4.1",
    "rome": "^12.1.0",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.2",
    "vitest": "^0.31.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint:fix"
  },
  "packageManager": "pnpm@8.3.1",
  "pnpm": {
    "patchedDependencies": {
      "@walletconnect/ethereum-provider@2.7.2": "patches/@walletconnect__ethereum-provider@2.7.2.patch",
      "@web3modal/standalone@2.4.1": "patches/@web3modal__standalone@2.4.1.patch"
    }
  }
}
